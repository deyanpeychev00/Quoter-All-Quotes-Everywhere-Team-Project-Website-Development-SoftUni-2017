<div id="index-banner top" class="parallax-container">
    <div class=" no-pad-bot">
        <div class="container">
            <br><br>
            <h1 class="header center teal-text text-lighten-2">Express yourself.</h1>
            <div class="row center">
                <h5 class="header col s12 light black-text">Share your thoughts with us.</h5>
            </div>
            <div class="row center">
                <a href="/article/create" id="download-button" class="btn-large waves-effect waves-light teal lighten-1 card-panel hoverable">New Post</a>
            </div>
            <br><br>

        </div>
    </div>
    <div class="parallax"><img src="/stylesheets/images/background5.jpg" alt="Unsplashed background img 1"></div>
</div>
<div class="container body-content">
    <div class="row">
        <div class ="col-md-12" style="padding: 50px">
            <article>
                <header>
                    <h2>{{article.title}}</h2>
                </header>
                <div class="divider"></div>
                <p>
                    -{{article.content}}
                </p>
                <small class="author chip">
                   By:  <b>{{article.author.fullName}}</b>
                </small>
                <br>
                <small class="author">
                    Date published: <b>{{article.date}}</b>
                </small>
                {{#if user}}
                    <form method="POST" action="/article/details/{{article.id}}">
                        <div class="left">
                            <button class="hoverable btn btn-default btn-xs" type="submit"><i class="small material-icons">thumb_up</i><span style="padding-left: 10px">{{article.likesCount}}</span></button>
                        </div>
                    </form>
                {{/if}}
                <div class="right">
                    {{#if user}}
                        <a id="authorval" class="hoverable waves-effect waves-light btn darken-2 yellow" href="/article/edit/{{article.id}}"><i class="material-icons">mode_edit</i></a>
                        <a id="authorval" class="hoverable waves-effect waves-light btn red" href="/article/delete/{{article.id}}"><i class="material-icons">delete</i></a>
                    {{/if}}

                    <a class="hoverable btn btn-default btn-xs icon-preview" href="/wall">Back to wall</a>
                </div>

            </article>
        </div>
    </div>
</div>